<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Thumbnail_UI"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/eightDips"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:contentDescription="@string/thumbnail"
        tools:src="@drawable/joker_hardysandhu_cover" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eightDips"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initialTime" />

        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/eightDips"
            android:layout_marginRight="@dimen/eightDips"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/runtime" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/sixteenDips"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/desc"
            android:padding="@dimen/eightDips"
            android:src="@drawable/round_shuffle_black_36" />

        <ImageView
            android:id="@+id/playPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc"
            android:padding="@dimen/eightDips"
            android:src="@drawable/round_fast_rewind_black_48" />

        <ImageView
            android:id="@+id/play_pause_now_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc"
            android:padding="@dimen/eightDips"
            android:src="@drawable/round_play_arrow_black_48" />

        <ImageView
            android:id="@+id/playNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc"
            android:padding="@dimen/eightDips"
            android:src="@drawable/round_fast_forward_black_48" />

        <ImageView
            android:id="@+id/favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/desc"
            android:padding="@dimen/eightDips"
            android:src="@drawable/round_favorite_border_black_36" />
    </LinearLayout>
</LinearLayout>
